{
  "name": "dotcn",
  "version": "0.0.1-alpha",
  "private": true,
  "description": "Simple CLI tool to install shadcn compatible components from various ui-libraries such as magic-ui, aceternity-ui or hexta-ui",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "lint": "biome lint --write",
    "format": "biome format --write",
    "check": "biome check --write"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.1",
    "@types/node": "^24.0.13",
    "tsdown": "latest"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.6.0",
    "commander": "^14.0.0",
    "execa": "^9.6.0",
    "motion": "^12.23.5",
    "yoctocolors": "^2.1.1",
    "zod": "^4.0.5"
  }
}
