{
  "name": "dotcn",
  "version": "0.0.1-alpha",
  "description": "Simple CLI tool to install shadcn compatible components from various ui-libraries such as magic-ui, aceternity-ui or hexta-ui etc..",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "bin": {
    "dotcn": "dist/index.js"
  },
  "homepage": "https://github.com/atybdot/dotcn",
  "author": {
    "name": "@atybdot",
    "url": "https://x.com/atybdot"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/atybdot/dotcn.git"
  },
  "keywords": [
    "shadcn",
    "ui",
    "manager",
    "nodejs",
    "cli",
    "components",
    "radix-ui",
    "magic-ui",
    "aceternity-ui",
    "libraries",
    "shadcn-ui",
    "react"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/atybdot/dotcn/issues/new/choose"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "lint": "biome lint --write",
    "format": "biome format --write",
    "check": "biome check --write"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.1",
    "@types/node": "^24.0.13",
    "husky": "^9.1.7",
    "tsdown": "latest",
    "ultracite": "5.0.36"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.6.0",
    "commander": "^14.0.0",
    "execa": "^9.6.0",
    "motion": "^12.23.5",
    "yoctocolors": "^2.1.1",
    "zod": "^4.0.5"
  }
}
